<!--set the context to the first item in the blogPostComments array-->
{{#with (blogPostComments.[0])}}
<div class="card">
    <h2 class="card-header flex-row">
      <a>{{title}}</a>
      <p>Posted by {{user.username}} on {{format_date date_posted}}</p>
    </h2>
    <div class="card-body">
      <p>
        {{content}}
      </p>
    </div>
</div>

<div class="card">
    <h2 class="card-header" id="comment-header"></h2>
    <div class="card-body">
      {{#each blogPostComments.comments as |comment|}}
        {{#with (comment.[0])}}
          <p>
            {{content}}<br>
            —— {{user.username}}, {{format_date date_posted}}
          </p>
        {{/with}}
      {{/each}}
    </div>
</div>
{{/with}}


