<!--set the context to the first item in the blogPostComments array-->
{{#with (blogPostComments.[0])}}
<div class="card">
    <h2 class="card-header flex-row">
      <a>{{title}}</a>
      <p>Posted by {{user.username}} on {{format_date date_posted}}</p>
    </h2>
    <div class="card-body">
      <p>
        {{content}}
      </p>
    </div>
</div>
{{/with}}

<div class="card">
    <h2 class="card-header" id="comment-header"></h2>
    <div class="card-body">
      {{#each blogPostComments as |blogPostComment|}}
      <p>
        {{blogPostComment.comment.content}}<br>
        —— {{blogPostComment.comment.user.username}}, {{format_date blogPostComment.comment.date_posted}}
      </p>
      {{/each}}
    </div>
</div>
